<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menu_btn_medicine"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/medicine" />

        <Button
            android:id="@+id/menu_btn_appointment"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/appoint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menu_btn_body_check"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/health_check" />

        <Button
            android:id="@+id/menu_btn_others"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/others" />

    </LinearLayout>

    <ListView
        android:id="@+id/reminder_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E6E6E6"
        >
    </ListView>

    </LinearLayout>
    
    
    
</FrameLayout>
