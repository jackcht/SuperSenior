<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
    <LinearLayout
        android:id="@+id/record_new_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/record_new_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="@string/new_record"
            android:textSize="25sp" />
        
    </LinearLayout>
    
    <View   
        android:layout_width="fill_parent"  
        android:layout_height="2dp"  
        android:background="#33b5e5"  
        /> 
    

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_weight="7" >

        <Button
            android:id="@+id/record_new_pulse"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/newpulserecord" />

        <Button
            android:id="@+id/record_new_temp"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/newtemprecord" />

        <Button
            android:id="@+id/record_new_pressure"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/newpressurerecord" />

        <Button
            android:id="@+id/menu_new_auto"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:background="@drawable/automeasure" />

    </LinearLayout>
    
    <Button
        android:id="@+id/newrecord_ok"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="220dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ok"
        />

    
    
</LinearLayout>